                        <p>{{#if patient_email}}<span style="color:#626262;border-bottom:transparent">E-mail
                                :</span>{{patient_email}} {{/ if}}</p>
                        <p>{{#if patient_mobile}}<span style="color:#626262;border-bottom:transparent">Téléphone
                                :</span>{{patient_mobile}} {{/ if}}</p>
